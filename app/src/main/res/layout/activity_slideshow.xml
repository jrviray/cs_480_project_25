<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageSwitcher
        android:id="@+id/iv_slideshow_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
     />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:layout_weight="0.1">

        <ImageButton
            android:id="@+id/b_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_left_arrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#989898"/>

        <TextView
            android:id="@+id/tv_photo_name"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/b_right_arrow"
            android:layout_toRightOf="@+id/b_left_arrow"
            android:text="test"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#989898"/>

        <ImageButton
            android:id="@+id/b_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_right_arrow"
            android:background="#989898"></ImageButton>

    </RelativeLayout>

</LinearLayout>